<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:text="\nPoints: 0" />

        <TextView
            android:id="@+id/txtQNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1/3"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_below="@id/txtPoints"/>


        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@+id/QuizImage"
            android:text="Timer"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPACE FOR QUESTIONS\nSPACE FOR QUESTIONS\nSPACE FOR QUESTIONS"
            android:layout_below="@+id/QuizImage"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="300dp"
            android:layout_marginRight="10dp"
            android:textSize="25dp"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/QuizImage"
            android:layout_width="429dp"
            android:layout_height="254dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/table_mountain" />

        <RadioGroup
            android:id="@+id/RBtnGroup"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            >

            <RadioButton
                android:id="@+id/RBtn1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/RBtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/RBtn1"
                android:text="B"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/RBtn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RBtn1"
                android:text="C"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/RBtn4"
                android:layout_width="match_parent"android:layout_height="wrap_content"
                android:layout_below="@+id/RBtn2"
                android:scaleX=

                android:text="D"
                android:textSize="20dp" />
        </RadioGroup>

        <Button
            android:id="@+id/BtnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RBtnGroup"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="75dp"
            android:text="Next"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>